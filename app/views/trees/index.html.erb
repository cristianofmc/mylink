<p style="color: green"><%= notice %></p>

<div class="trees">
  <h1>Trees</h1>

  <div id="trees">
    <% @trees.each do |tree| %>
      <%= render tree %>
      <p>
        <%= link_to "Show this tree", tree %>
      </p>
    <% end %>
  </div>

  <% if current_user %>
    <% unless current_user.tree.present? %>
      <div class="new_tree"><%= link_to "New tree", new_tree_path %></div>
    <% end %>
  <% end %>
</div>
